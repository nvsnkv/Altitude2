<Grid x:Class="NV.Altitude2.Tracker.Views.ControlPanel.PipelineControlView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <ToggleButton Style="{StaticResource ControlPanelButtonStyle}" IsChecked="{Binding LocationService.IsEnabled, Mode=TwoWay}">
        Location
    </ToggleButton>

    <ToggleButton Grid.Column="1" Style="{StaticResource ControlPanelButtonStyle}" IsChecked="{Binding PackageArranger.IsEnabled, Mode=TwoWay}">
        Packaging
    </ToggleButton>

    <ToggleButton Grid.Column="2" Style="{StaticResource ControlPanelButtonStyle}" IsChecked="{Binding TransferService.IsEnabled, Mode=TwoWay}">
        Transfer
    </ToggleButton>
</Grid>